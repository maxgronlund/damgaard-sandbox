body{
  background-color:#999;
  margin:0px;
}

.gallery-preview{
  width:540px;
  height:424px;
  display:block;
  overflow:hidden;
  background-color:#444;
  margin: 0px 0px 4px 0px;
  border:1px solid #000;
  position:absolute;
  top:0px;
  right:0px
}

.gallery-preview a;{
  border-color: #000; 
}

.gallery-preview a:hover;{
  border-color: #000; 
}

.gallery{
  width:542px;
  height:426px;
  display:block;
  overflow:hidden;
  background-color:#000;
  position:relative
}

.gallery-thumbs{
  position:absolute;
  top:0px;
  right:0px
}


.gallery-thumb{
  top:0;
  height:80px;
  background-color:#000;
  padding: 0px;
  margin: 0px 0px 4px 0px;
  border:1px solid #000;
}

.clear_both{
  clear:both;
  line-height:1px;
}

a img{
  border:none;
}

.gallery a{
  display:block;
  overflow:hidden;
  border-color: #000; 
}

.gallery a:hover {
  border-color: #000; 
}

.gallery a:active {
  border-color: #000; 
}


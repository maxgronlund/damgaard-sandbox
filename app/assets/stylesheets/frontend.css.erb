h1{
	font-size: 26px;
	font-weight: normal;
	font-style: normal;
	margin-bottom: 18px;
}

h2{
	font-size: 18px;
}

p {
	color: #fff;
	font-size: 14px;
}

.fullBg {
	position: fixed;
	top: 0px;
	left: 0px;
	overflow: hidden;
}

#maincontent {
	background-image: url('<%= asset_path "transp_pixel_pattern.png" %>');
	/*background-image: url("../images/transp_pixel_pattern.png");*/
	position: absolute;
	top: 0px;
	left: 0;
	z-index: 50;
	width: 100%;
	height:100%;

	}

.box {

	width: 960px;
	margin: auto;
	margin-top: 300px;
	color:#fff;
	font-family: 'KlavikaRegular';
}



.box #left-box{
  background-color:rgba(0,0,0,0.5);
  float:left;
  width:600px;
  padding:5px;
  margin-bottom:10px;
}

.box #right-box{
  background-color:rgba(0,0,0,0.5);
  float:left;
  width:330px;

  padding:5px;
  margin-bottom:10px;
  margin-left:10px;
}

.box .headline{
  border-top:1px solid;
  border-bottom:1px dotted;
  margin:14px 8px 5px 8px;
}

.box .content{
  margin:14px 8px 5px 8px;
  font-size: 14px;
}

#solid-red{
  clear:both;
	background-color:#ff4600;
	margin: auto;
	width: 960px;
	height:48px;

	margin-top: 10px;
}

@font-face {
    font-family:'KlavikaRegular';
    src: url('<%= asset_path "klavikaregular-tf-webfont.eot" %>');
    src: url('<%= asset_path "klavikaregular-tf-webfont.eot?#iefix" %>') format('embedded-opentype'),
         url('<%= asset_path "klavikaregular-tf-webfont.woff" %>')format('woff'),
         url('<%= asset_path "klavikaregular-tf-webfont.ttf" %>') format('truetype'),
         url('<%= asset_path "klavikaregular-tf-webfont.svg#KlavikaRegular" %>') format('svg');
    font-weight: normal;
    font-style: normal;
}

.top-gap{
	padding-top: 60px;
	
}
h3 Menus for #{@company.title.capitalize!}
.row
  .span6
  
  
    /ul id="sortable"
    /	li Item 1
    /	li Item 2
    /	li class="ui-state-default"
    /	  span class="ui-icon ui-icon-arrowthick-2-n-s"Item 3
    /	li class="ui-state-default"
    /	  span class="ui-icon ui-icon-arrowthick-2-n-s"Item 4
    /	li class="ui-state-default"
    /	  span class="ui-icon ui-icon-arrowthick-2-n-s"Item 5
    /	li class="ui-state-default"
    /	  span class="ui-icon ui-icon-arrowthick-2-n-s"Item 6
    /	li class="ui-state-default"
    /	  span class="ui-icon ui-icon-arrowthick-2-n-s"Item 7
                                                                                            

    ul id="sortable" update-url="#{sort_menus_url} %>"
      - @menus.each do |menu|
        = content_tag_for :li, menu do
          = link_to menu.title.upcase, menu
          '&nbsp;
          = menu.title_uk.upcase
          
          '&nbsp;
          = link_to '', edit_company_menu_path(menu.company, menu), :class => "icon-pencil", :rel => "popover",  :'data-original-title'=>"Edit menu", :'data-content'=>"The menu shows up in the top bar when the company is selected"
          '&nbsp;
          = link_to '', menu, :method => "delete", :confirm => 'Are you sure?',  :class => "icon-remove"
          '&nbsp;
          
          /= link_to 'Edit', edit_company_menu_path(menu.company, menu)
          /= link_to 'Destroy', menu, :confirm => 'Are you sure?', :method => :delete
          /
          hr
          
      
br

= link_to 'New Menu', new_company_menu_path(@company), :class => 'btn btn-primary'

script 
  | $(function () {
      $("a[rel=popover]")
        .popover({
          offset: 10,
          placement: 'right'
        })
        .clickx(function(e) {
          e.preventDefault()
        })
      })
